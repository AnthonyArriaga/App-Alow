<Vent_Inicio>:
    FloatLayout:

        Image:
            source: "wallpaper.png"
            allow_stretch: True
            keep_ratio: False
            size: self.parent.size
            pos: self.parent.pos

        Label:
            size_hint: .5, .1
            pos_hint: {"center_x": .5, "center_y": .9}
            text: "BIENVENIDO"
            font_size: self.height * 0.8

        Button:
            size_hint: .20, .09
            pos_hint: {"center_x": .5, "center_y": .6}
            text: "INICIAR SESION"
            on_release: root.logeo()

